{
  "name": "contracts",
  "version": "0.1.1",
  "description": "Iden3 smartcontracts",
  "repository": {
    "type": "git",
    "url": "https://github.com/iden3/contracts.git"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/iden3/contracts/issues"
  },
  "homepage": "https://github.com/iden3/contracts",
  "scripts": {
    "slither": "slither .",
    "node:local": "npx hardhat node",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "COINMARKETCAP_KEY=<put your key here> REPORT_GAS=true npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "verify:opt": "npx hardhat run scripts/verifyEtherescan.js --network opt",
    "lint:contracts": "npx solhint contracts/**/*.sol",
    "prettier:contracts": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "deploy:state:opt": "npx hardhat run scripts/deployState.ts --network opt",
    "deploy:state:opt-sepolia": "npx hardhat run scripts/deployState.ts --network opt-sepolia",
    "deploy:state:localhost": "npx hardhat run scripts/deployState.ts --network localhost",
    "deploy:identitytreestore:localhost": "npx hardhat run scripts/deployIdentityTreeStore.ts --network localhost",
    "deploy:universalverifier:opt": "npx hardhat run scripts/deployUniversalVerifier.ts --network opt",
    "deploy:universalverifier:opt-sepolia": "npx hardhat run scripts/deployUniversalVerifier.ts --network opt-sepolia",
    "deploy:universalverifier:localhost": "npx hardhat run scripts/deployUniversalVerifier.ts --network localhost",
    "deploy:validators:localhost": "npx hardhat run scripts/deployValidators.ts --network localhost",
    "deploy:validators:opt": "npx hardhat run scripts/deployValidators.ts --network opt",
    "deploy:validators:opt-sepolia": "npx hardhat run scripts/deployValidators.ts --network opt-sepolia",
    "deploy:its:localhost": "npx hardhat run scripts/deployIdentityTreeStore.ts --network  localhost",
    "deploy:its:opt": "npx hardhat run scripts/deployIdentityTreeStore.ts --network  opt",
    "deploy:its:opt-sepolia": "npx hardhat run scripts/deployIdentityTreeStore.ts --network opt-sepolia",
    "deploy:vc-payment:opt-sepolia": "npx hardhat run scripts/deployVCPayment.ts --network opt-sepolia",
    "upgrade:contracts:its:opt": "npx hardhat run scripts/upgrade/identitytreestore/identitytreestore-upgrade.ts --network opt",
    "upgrade:contracts:its:opt-sepolia": "npx hardhat run scripts/upgrade/identitytreestore/identitytreestore-upgrade.ts --network opt-sepolia",
    "upgrade:contracts:state:opt": "npx hardhat run scripts/upgrade/state/state-upgrade.ts --network opt",
    "upgrade:contracts:state:opt-sepolia": "npx hardhat run scripts/upgrade/state/state-upgrade.ts --network opt-sepolia",
    "payment:set-payment-value:opt-sepolia": "npx hardhat run scripts/setPaymentValue.ts --network opt-sepolia"
  },
  "devDependencies": {
    "@iden3/js-crypto": "^1.1.0",
    "@iden3/js-iden3-core": "^1.4.0",
    "@iden3/js-jsonld-merklization": "1.4.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.5",
    "@types/chai": "^4.3.14",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.6",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@wakeuplabs/opid-sdk": "1.0.1",
    "circomlibjs": "^0.1.6",
    "dotenv": "16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "hardhat": "^2.22.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "4.1.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-bytes-utils": "^0.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  }
}
